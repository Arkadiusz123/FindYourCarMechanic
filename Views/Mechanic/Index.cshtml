@model IEnumerable<FindYourCarMechanic.Mechanic>

@{
    ViewData["Title"] = "Index";
}



<form asp-controller="Mechanic" asp-action="Index" style="margin-top: 15px;">
    <p>
        City: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                City
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Make an appointment", "CreateRepair", "Repair", new { id=item.Id })
            </td>
        </tr>
        }
        </tbody>
</table>
